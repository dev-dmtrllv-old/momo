{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "src",
		"rootDir": "src/main",
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/main/**/*"
	]
}
